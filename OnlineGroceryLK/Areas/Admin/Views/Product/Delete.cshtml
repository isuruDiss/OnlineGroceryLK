@model OnlineGroceryLK.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />


<section class="categories-slider-area bg__white">

    <div class="container" style="padding-bottom:20%; padding-top:5%">
        <h2 class="text-info" style="padding-bottom:5%">Delete Product</h2>

        <form method="post">
            <div class="border backgroundWhite">
                <input type="hidden" asp-for="Id" />
                <fieldset disabled>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Name" class="custom-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Category.Name" class="custom-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Category.Name" class="form-control" />
                        </div>
                    </div>
                </fieldset>
                <br />
                <div class="form-group row" style="padding-left:50%">
                    <div class="col-7 offset-2">
                        <partial name="_DeleteAndBackToListButton" model="Model.Id" />
                    </div>
                </div>
            </div>
        </form>
    </div>


</section>
