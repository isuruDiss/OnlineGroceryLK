@model IEnumerable<StockMaster>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="categories-slider-area bg__white">

    <div class="container" style="padding-top:20px">
        <h2 class="text-info"> Stock List</h2>

        <div class="row">

            <div class="col-9 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Category.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Product.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Qty)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Status)
                        </th>
                        <th>
                            Decription
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Id)
                            </td>

                            <td>
                                @Html.DisplayFor(m => item.Category.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Product.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Qty)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Status)
                            </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Stocks Under Logged Supplier exists...</p>
            }
        </div>
    </div>
</section>

